<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/user_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hic_color300"
        android:padding="16dp">

        <ImageView
            android:id="@+id/user_header"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            android:background="@color/hic_colorA400" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:text="登录"
            android:textSize="24sp"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="@id/user_header"
            app:layout_constraintLeft_toRightOf="@id/user_header" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/block_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hic_color900"
        app:layout_constraintTop_toBottomOf="@id/user_view" />

</android.support.constraint.ConstraintLayout>